<p id="notice"><%= notice %></p>

<h1>Liste des attaques</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @moves.each do |move| %>
      <tr>
        <td><%= move.name %></td>
        <td><%= move.description %></td>
        <td><%= move.type %></td>
        <td><%= link_to 'Afficher', move, class: 'btn btn-info'%></td>
        <td><%= link_to 'Edit', edit_move_path(move), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', move, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Ajouter une attaque', new_move_path %>
